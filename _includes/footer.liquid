{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      &copy; Copyright {{ site.time | date: '%Y' }}
      {{ site.first_name }}
      {{ site.middle_name }}
      {{ site.last_name }}. {{ site.footer_text }}
      {% if site.impressum_path %}
        <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
      {% endif %}
      {% if site.last_updated %}
        Last updated: {{ 'now' | date: '%B %d, %Y' }}.
      {% endif %}

      <!-- ðŸ”— Add social icons -->
      <div style="margin-top: 10px;">
        <a href="https://www.linkedin.com/in/yangyang-meng-227700362/" target="_blank" style="margin: 0 10px;">
          <i class="fab fa-linkedin fa-lg"></i>
        </a>
        <a href="https://github.com/immortalsRDJ/" target="_blank" style="margin: 0 10px;">
          <i class="fab fa-github fa-lg"></i>
        </a>
      </div>
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    {% if site.newsletter.enabled %}
      {% include scripts/newsletter.liquid %}
    {% endif %}

    <div class="container">
      &copy; Copyright {{ site.time | date: '%Y' }}
      {{ site.first_name }}
      {{ site.middle_name }}
      {{ site.last_name }}. {{ site.footer_text }}
      {% if site.impressum_path %}
        <a href="{{ site.url }}{{ site.baseurl }}{{ site.impressum_path }}">Impressum</a>.
      {% endif %}
      {% if site.last_updated %}
        Last updated: {{ 'now' | date: '%B %d, %Y' }}.
      {% endif %}

      <!-- ðŸ”— Add social icons -->
      <div style="margin-top: 10px;">
        <a href="https://www.linkedin.com/in/YOUR-LINKEDIN-ID" target="_blank" style="margin: 0 10px;">
          <i class="fab fa-linkedin fa-lg"></i>
        </a>
        <a href="https://github.com/YOUR-GITHUB-ID" target="_blank" style="margin: 0 10px;">
          <i class="fab fa-github fa-lg"></i>
        </a>
      </div>
    </div>
  </footer>
{% endif %}